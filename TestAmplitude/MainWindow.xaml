<Window x:Class="TestAmplitude.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
        xmlns:local="clr-namespace:TestAmplitude"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="650"
        MinWidth="500">
   <Window.Resources>
      <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
   </Window.Resources>

   <Grid>
      <Grid.RowDefinitions>
         <RowDefinition Height="20" />
         <RowDefinition Height="*" />
         <RowDefinition Height="*" />
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
         <ColumnDefinition Width="Auto" />
         <ColumnDefinition Width="*" />
         <ColumnDefinition Width="115" />
      </Grid.ColumnDefinitions>
      <TextBlock Grid.Row="0"
                 Grid.Column="0"
                 Margin="10,0,10,0"
                 Text="API Key:" />
      <TextBox Grid.Row="0"
               Grid.Column="1"
               Margin="10,0,10,0"
               Text="{Binding APIKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
               IsEnabled="{Binding APIKeyEnabled, Mode=OneWay}"
               HorizontalContentAlignment="Stretch" />
      <Button Grid.Row="0"
              Grid.Column="2"
              Margin="10,0,10,0"
              Content="{Binding SessionButtonText, Mode=OneWay}"
              Command="{Binding SessionCommand, Mode=OneTime}"
              IsEnabled="{Binding SessionEnabled, Mode=OneWay}" />
      <Grid Grid.Row="1"
            Grid.ColumnSpan="3"
            Visibility="{Binding IsTrackingOptionsVisible, Converter={StaticResource BoolToVisConverter}}">
         <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
         </Grid.RowDefinitions>
         <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170" /><!--Text for event-->
            <ColumnDefinition Width="*" /><!--Name for event-->
            <ColumnDefinition Width="70" /><!--Number for event-->
            <ColumnDefinition Width="100" /><!--Track button-->
         </Grid.ColumnDefinitions>
         <TextBlock Grid.Row="0"
                    Grid.Column="0"
                    Text="Track Event"
                    Margin="10,0,10,0"
                    VerticalAlignment="Center" />
         <TextBox Grid.Row="0"
                  Grid.Column="1"
                  Text="{Binding TrackEventNameText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  Height="25"
                  HorizontalAlignment="Stretch"
                  Margin="10,0,10,0" />
         <Button Grid.Row="0"
                 Grid.Column="3"
                 Content="Track"
                 Margin="10,0,10,0"
                 IsEnabled="{Binding TrackEventNameEnabled, Mode=OneWay}"
                 Height="25"
                 HorizontalAlignment="Stretch"
                 Command="{Binding TrackEventCommand, Mode=OneTime}" />
         <TextBlock Grid.Row="1"
                    Grid.Column="0"
                    Text="Track Event With Number"
                    Margin="10,0,10,0"
                    VerticalAlignment="Center" />
         <TextBox Grid.Row="1"
                  Grid.Column="1"
                  Text="{Binding TrackEventWithNumberNameText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  Height="25"
                  HorizontalAlignment="Stretch"
                  Margin="10,0,10,0"/>
         <TextBox Grid.Row="1"
                  Grid.Column="2"
                  Text="{Binding TrackEventWithNumberNumberText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  Height="25"
                  HorizontalAlignment="Stretch"
                  Padding="10,0,10,0"/>
         <Button Grid.Row="1"
                 Grid.Column="3"
                 Content="Track"
                 Margin="10,0,10,0"
                 IsEnabled="{Binding TrackEventWithNumberNameEnabled, Mode=OneWay}"
                 Height="25"
                 HorizontalAlignment="Stretch"
                 Command="{Binding TrackEventWithNumberCommand, Mode=OneTime}" />
      </Grid>
      <TextBox Grid.Row="2"
               Grid.Column="0"
               Grid.ColumnSpan="3"
               VerticalScrollBarVisibility="Visible"
               IsReadOnly="True"
               Text="{Binding AmplitudeOutput, Mode=OneWay}" />
   </Grid>
</Window>
